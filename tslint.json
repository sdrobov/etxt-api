{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "indent": [true, "spaces", 2],
        "quotemark": [true, "single", "avoid-escape"]
    },
    "rules": {
        "arrow-parens": false,
        "trailing-comma": false
    },
    "rulesDirectory": []
}
